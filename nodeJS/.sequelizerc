var path = require('path');
var app = require('./app');

var seeders_path = "./config/db/";

switch (process.env.NODE_ENV) {
	case 'production':
		seeders_path = seeders_path + 'production';
		break;
	default:
		seeders_path = seeders_path + 'development';
		break;
}


module.exports = {
	"config":  path.resolve("./config/", "db_config.json"),
 	"migrations-path": path.resolve("./config/db/", "migrations"),
	"seeders-path": path.resolve(seeders_path, "seeders"),
	"models-path": path.resolve("./", "models")
}
