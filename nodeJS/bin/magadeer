#!/usr/bin/env node

const app = require('../app');
const debug = require('debug')('magadeer:server');
const http = require('http');
const appConfig = require('../config/app_config');
const winston = require('winston');

app.set('port', appConfig.port);

const server = app.listen(app.get('port'), function() {
  winston.log('info', 'Magadeer ' + process.env.NODE_ENV  + ' server listening on port ' + server.address().port);
});

winston.log('info', "NODE_ENV : " + process.env.NODE_ENV);
